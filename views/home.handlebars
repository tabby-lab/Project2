{{!-- <div class="mainContainer"> --}}
<div class="parallax-container">
    <div class="parallax"><img src="backpacker.jpg">
    </div>
</div>

<div class="section white">
    <div class="row container">
        <form class="container-fluid" id="inputElements">
            <div class="row">
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text alert-success" for="budgetInput"><i
                                    class="fas fa-money-bill-wave"></i></label>
                        </div>
                        <select class="custom-select" id="budgetInput" name="budgetInput">
                            <option selected></option>
                            <option value="1">$</option>
                            <option value="2">$$</option>
                            <option value="3">$$$</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text alert-success" id="city"><i
                                    class="fas fa-map-marker-alt"></i></span>
                        </div>
                        <input type="text" id="cityInput" class="form-control" placeholder="Where to?" aria-label="city"
                            aria-describedby="city" name="cityInput">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text alert-success" id="arrival"><i
                                    class="fas fa-plane-arrival"></i></span>
                        </div>
                        <input id="from_date" type="text" class="datepicker" placeholder="Arrival">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text alert-success" id="departure"><i
                                    class="fas fa-plane-departure"></i></span>
                        </div>
                        <input type="text" class="form-control" id="departureInput" placeholder="Departure"
                            aria-label="departure" aria-describedby="departure" name="departureInput">
                    </div>
                </div>
        </form>
        <div class="row">
            <div class="col s3">
                <select id="price_range">
                    <option value="" disabled selected>Price</option>
                    <option value="$">Option 1</option>
                    <option value="$$">Option 2</option>
                    <option value="$$$">Option 3</option>
                </select>
                <label>Materialize Select</label>
            </div>

            <div class="input-field col s3">
                <input id="destination" class="icon_prefix" type="text" class="validate">
                <label for="destination">Where to?</label>
            </div>
        </div>


        <div class="col s3">
            <input id="from_date" type="text" class="datepicker">
        </div>

        <div class="col s3">
            <div class="row">
                <input id="to_date" type="text" class="datepicker">
            </div>
        </div>

        <a class="waves-effect waves-light btn-large search_button"><i class="material-icons right">flight</i>button</a>

    </div>

</div>
</div>
<div class="parallax-container">
    <div class="parallax"><img src="/image.jpg"></div>
</div>